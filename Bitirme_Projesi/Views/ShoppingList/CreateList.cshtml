@model ShoppingListViewModel

<div class="row">
    <div class="col">
        <h3><span class="text-gradient d-inline"><i class="fa-solid fa-tags"></i> | Alışveriş Listesi Ekle</span></h3>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-6">
        <form asp-controller="ShoppingList" asp-action="CreateList" method="post">
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Liste Adı</label>
                <input asp-for="Name" class="form-control" id="setInput" />
                <span asp-validation-for="Name" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Liste Ekle" class="btn btn-primary" />
                <div class="btn btn-warning" onclick="setDateToInput()"><i class="fa-solid fa-calendar-days"></i></div>
            </div>
        </form>
    </div>
</div>


<script>
    function setDateToInput() {
        var currentDate = new Date();
        var formattedDate = currentDate.toLocaleDateString("tr-TR", {
            weekday: "long",
            day: "numeric",
            month: "long",
            year: "numeric"
        });

        var inputElement = $("#setInput");
        var currentValue = inputElement.val();
        var newText = formattedDate + " - Alışveriş Listesi";

        if (currentValue) {
            newText = currentValue + " " + newText;
        }

        inputElement.val(newText);
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}