@model ShoppingListViewModel

<div class="row">
    <div class="col">
        <h3><span class="text-gradient d-inline"><i class="fa-solid fa-tags"></i> | Alışveriş Listesi Ekle</span></h3>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-6">
        <form asp-controller="ShoppingList" asp-action="CreateList" method="post">
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Liste Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Liste Ekle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>