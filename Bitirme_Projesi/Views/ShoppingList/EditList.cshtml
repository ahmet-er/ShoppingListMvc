@model ShoppingListViewModel

<div class="row">
    <div class="col">
        <h3><span class="text-gradient d-inline"><i class="fa-solid fa-tags"></i> | Alışveriş Listesini Düzenle</span></h3>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-6">
        <form asp-controller="ShoppingList" asp-action="EditList" method="post">
            <input type="hidden" name="ShoppingListID" value="@Model.ShoppingListID" />

            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Liste Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">
                    <i class="fa-solid fa-rotate"></i> Listeyi Güncelle
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}