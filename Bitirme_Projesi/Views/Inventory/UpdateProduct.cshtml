@model ProductViewModel

<div class="row">
    <div class="col">
        <h3><span class="text-gradient d-inline"><i class="fa-solid fa-tags"></i> | Ürün Güncelle</span></h3>
    </div>
</div>
<hr />

<div class="row">
    <div class="col-6">
        <form asp-controller="Inventory" asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
            <div class="form-group mb-2">
                <label asp-for="Name" class="control-label">Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <label asp-for="Price" class="control-label">Ürün Fiyatı</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                
                <label asp-for="ImageFilePath" class="control-label">Resim URL</label>
                <input type="file" name="file" asp-for="ImageFilePath" class="form-control" />
                <span asp-validation-for="ImageFilePath" class="text-danger"></span>
            </div>

            @if (Model.Categories != null && Model.Categories.Any())
            {

                <div class="form-group mb-3">
                    <label asp-for="CategoryId" class="control-label">Kategori</label>
                    <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            }
            else
            {
                <p>kategori yok</p>
            }

            <div class="form-group">
                <input type="submit" value="Ürünü Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-6 text-center">
        @if (!string.IsNullOrEmpty(Model.ImageFilePath))
        {
            <img src="@Model.ImageFilePath" alt="@Model.Name" width="300" height="300" />
        }
    </div>
</div>