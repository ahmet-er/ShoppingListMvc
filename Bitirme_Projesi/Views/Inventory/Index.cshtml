@model InventoryViewModel

<div class="row">
    <div class="col">
        <h3><span class="text-gradient d-inline"><i class="fa-solid fa-users"></i> | Envanter Yönetimi</span></h3>
    </div>
    <div class="col-auto">
        <a class="btn btn-outline-primary" asp-controller="Inventory" asp-action="AddCategory">
            <i class="fa-solid fa-list"></i> | Kategori Ekle
        </a>
        <a class="btn btn-outline-primary" asp-controller="Inventory" asp-action="AddProduct">
            <i class="fa-solid fa-boxes-stacked"></i> | Ürün Ekle
        </a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">Kategori Adı</th>
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model.Categories)
                    {
                        <tr>
                            <th>@category.Name</th>
                            <th>
                                <a class="text-primary" asp-controller="Inventory" asp-action="UpdateCategory" asp-route-id="@category.CategoryID">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </th>
                            <th>
                                <a class="text-danger" asp-action="DeleteCategory" asp-controller="Inventory" asp-route-id="@category.CategoryID">
                                    <i class="fa-regular fa-trash-can"></i>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        @*<th scope="col">#</th>*@
                        <th scope="col">Ürün Görseli</th>
                        <th scope="col">Ürün Adı</th>
                        <th scope="col">Ürün Fiyatı</th>
                        <th scope="col">Ürün Kategori</th>
                        @*<th scope="col">Ürün URL</th>*@ <!-- göstermeyebilirsin, ilerde kaldır -->
                        <th scope="col"></th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model.Products)
                    {
                        <tr>
                            <th>
                                @if (!string.IsNullOrEmpty(product.ImageFilePath))
                                {
                                    <img src="@product.ImageFilePath" alt="@product.Name" width="40" height="40" />
                                }
                            </th>
                            <th>@product.Name</th>
                            <th>@product.Price</th>
                            @*<th>@product.CategoryId</th>*@
                            <th>@product.Category.Name</th>
                            @*<th>@product.ImageFilePath</th>*@

                            <th>
                                <a class="text-primary" asp-controller="Inventory" asp-action="UpdateProduct" asp-route-id="@product.ProductID">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </th>
                            <th>
                                <a class="text-danger" asp-action="DeleteProduct" asp-controller="Inventory" asp-route-id="@product.ProductID">
                                    <i class="fa-regular fa-trash-can"></i>
                                </a>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>